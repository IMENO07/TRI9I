<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteProfileActivity">
    <FrameLayout android:id="@+id/frameDeleteaccount"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        style="@style/groupStylepurple_A700">

        <LinearLayout android:id="@+id/linearColumnclose"
            android:layout_gravity="top|center"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_12pxh"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginTop="@dimen/_43pxv"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <TextView android:gravity="center_horizontal"
                android:id="@+id/txtLanguage"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_23pxh"
                android:layout_marginStart="@dimen/_23pxh"
                android:layout_marginTop="@dimen/_68pxv"
                android:layout_width="match_parent"
                android:lineSpacingExtra="@dimen/_10pxh"
                style="@style/txtPoppinsregular16"
                android:text="You will delete your account permanently"
                />

            <LinearLayout android:gravity="center_horizontal"
                android:id="@+id/linearColumngroupeight"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_38pxv"
                android:layout_width="match_parent"
                android:orientation="vertical"
                style="@style/groupStylecornerRadius">

                <EditText
                    android:id="@+id/edittxt_delete_user_pwd"
                    style="@style/etSolidRounded"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle_bg_white_a700_radius_4"
                    android:ellipsize="end"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/_20pxh"
                    android:paddingTop="@dimen/_16pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingBottom="@dimen/_17pxv"
                    android:singleLine="true"
                    android:textColorHint="@color/gray_900_7f"
                    tools:ignore="Autofill,TextSizeCheck" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/btn_delete_user_authenticate"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40pxv"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_15pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_15pxv"
                android:singleLine="true"
                android:text="Authenticate"
                android:textAllCaps="true"
                style="@style/btnSolidRounded_2"
                />

            <TextView android:gravity="center_horizontal"
                android:id="@+id/txtv_delete_user_authentificated"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_23pxh"
                android:layout_marginStart="@dimen/_23pxh"
                android:layout_marginTop="@dimen/_50pxv"
                android:layout_width="match_parent"
                android:lineSpacingExtra="@dimen/_10pxh"
                style="@style/txtPoppinsregular16"
                android:text="Your profile is not authentificated / verified yet"/>

            <androidx.appcompat.widget.AppCompatButton
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/btn_delete_user"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40pxv"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_15pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_15pxv"
                android:singleLine="true"
                android:text="Delete"
                android:textAllCaps="true"
                style="@style/btnSolidRounded_2"
                />
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>