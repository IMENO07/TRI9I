<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateEmailActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:id="@+id/relative"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:text="You can update your email adresse now.Please enter your password and verify before continuing "
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:id="@+id/head"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:id="@+id/txtv_curent_email"
            android:layout_below="@id/head"
            android:text="Current Email"
            android:padding="16dp"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtv_update_email_old"
            android:layout_below="@id/txtv_curent_email"
            android:padding="6dp"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/txtv_update_email_password"
            android:layout_below="@id/txtv_update_email_old"
            android:text="Password*"
            android:padding="6dp"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittxt_verify_password"
            android:layout_below="@id/txtv_update_email_password"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:padding="6dp"
            android:textSize="16sp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_authenticate_user"
            android:layout_below="@+id/edittxt_verify_password"
            android:text="Authenticate"
            android:layout_marginTop="10dp"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="70dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:layout_below="@+id/relative"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/txtv_update_email_authentificated"
            android:text="Your profile is not authentificated / verified yet"
            android:padding="6dp"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtv_update_email_new"
            android:layout_below="@+id/txtv_update_email_authentificated"
            android:text="New Email*"
            android:layout_marginTop="30dp"
            android:padding="6dp"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editxt_update_email_new"
            android:layout_below="@+id/txtv_update_email_new"
            android:hint="Enter your Email"
            android:inputType="textEmailAddress"
            android:padding="6dp"
            android:textSize="16sp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_update_email"
            android:layout_below="@+id/editxt_update_email_new"
            android:text="update email"
            android:layout_marginTop="10dp"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="70dp"
            />

    </RelativeLayout>

</LinearLayout>